---
const user = Astro.locals.user;

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="JDM Social Network" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-white">
    <!-- Header Section -->
    <header class="bg-gray-800 shadow-md py-4">
      <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
        <!-- Logo / Brand -->
        <a href="/" class="text-2xl font-bold text-red-600 hover:text-red-400 transition duration-200">JDM Social</a>

        <!-- Navigation Menu -->
        <nav>
          <ul class="flex space-x-4">
            <li><a href="/" class="hover:text-red-600 transition duration-200">Inicio</a></li>
            <li><a href="/profile" class="hover:text-red-600 transition duration-200">Perfil</a></li>
            <li><a href="/feed" class="hover:text-red-600 transition duration-200">Feed</a></li>
            <li><a href="/events" class="hover:text-red-600 transition duration-200">Eventos</a></li>

            <div class="flex items-center space-x-4">
              {!user ? (
                <>
                  <li><a href="/signin" class="text-red-600 hover:text-red-400 transition duration-200">Sign In</a></li>
                  <li><a href="/signup" class="text-red-600 hover:text-red-400 transition duration-200">Sign Up</a></li>
                </>
              ) : (
                <div class="flex items-center space-x-4">
                  <form method="POST" action="/api/signout">
                    <button type="submit" class="text-red-600 hover:text-red-400 transition duration-200">Sign out</button>
                  </form>
                </div>
              )}
            </div>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main Content Area -->
    <main class="py-8 px-4 max-w-7xl mx-auto">
      <slot />
    </main>

    <!-- Footer Section -->
    <footer class="bg-gray-800 text-center py-6 mt-12">
      <p>&copy; 2024 JDM. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>

<style>
   * {
    scrollbar-width: thin;
    scrollbar-color: #ff4652 #000000;
  }

  /* Chrome, Edge, and Safari */
  *::-webkit-scrollbar {
    width: 42px;
  }

  *::-webkit-scrollbar-track {
    background: #000000;
  }

  *::-webkit-scrollbar-thumb {
    background-color: #c93636;
    border-radius: 42px;
    border: 24px none #00ff4c;
  }
</style>